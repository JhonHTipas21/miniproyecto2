@model IEnumerable<GestorGastos.Web.Models.Entrada>
@{ ViewData["Title"] = "Entradas"; }

<h1>@ViewData["Title"]</h1>
<p><a asp-action="Create" class="btn btn-success">Nueva Entrada</a></p>

<table class="table table-striped">
  <thead>
    <tr>
      <th>@Html.DisplayNameFor(m => m.First().Fecha)</th>
      <th>@Html.DisplayNameFor(m => m.First().Monto)</th>
      <th></th>
    </tr>
  </thead>
  <tbody>
  @foreach(var e in Model) {
    <tr>
      <td>@e.Fecha.ToString("yyyy-MM-dd")</td>
      <td>@e.Monto.ToString("C")</td>
      <td>
        <form asp-action="Delete" asp-route-id="@e.Id" method="post" class="d-inline">
          <button type="submit" class="btn btn-sm btn-danger">Eliminar</button>
        </form>
      </td>
    </tr>
  }
  </tbody>
</table>
