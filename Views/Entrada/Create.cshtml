@model GestorGastos.Web.Models.Entrada
@{ ViewData["Title"] = "Nueva Entrada"; }

<h1>@ViewData["Title"]</h1>

<form asp-action="Create" method="post">
  <div class="mb-3">
    <label asp-for="Fecha" class="form-label"></label>
    <input asp-for="Fecha" type="date" class="form-control" />
    <span asp-validation-for="Fecha" class="text-danger"></span>
  </div>
  <div class="mb-3">
    <label asp-for="Monto" class="form-label"></label>
    <input asp-for="Monto" class="form-control" />
    <span asp-validation-for="Monto" class="text-danger"></span>
  </div>
  <button type="submit" class="btn btn-success">Guardar</button>
  <a asp-action="Index" class="btn btn-secondary">Cancelar</a>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
